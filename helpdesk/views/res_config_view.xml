<?xml version="1.0"?>
<odoo>
      <record id="res_config_settings_view_form_inherit_helpdesk" model="ir.ui.view">
          <field name="name">helpdesk_settings_form</field>
          <field name="model">res.config.settings</field>
          <field name="inherit_id" ref="base.res_config_settings_view_form"/>
          <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
              <div class="app_settings_block" data-string="helpdesk" string="Helpdesk" data-key="helpdesk" groups="helpdesk.group_helpdesk_manager">
                <h2>Helpdesk BlackList</h2>
                <div class="row mt8 o_settings_container">
                  <div class="col-xs-32 col-md-32 o_setting_box">
                    <div class="o_setting_right_pane ">
                       <label string="BlackList Configuration:"/>
                       <div class="content-group">
                         <div class="mt8">
                           <label string="Create BlackList item when " class="oe_inline o_light_label"/>
                           <field name="crm_helpdesk_improvement_number_of_tickets" class="oe_inline"/>
                           <label string="  tickets are created over a period of " class="oe_inline o_light_label"/>
                           <field name="crm_helpdesk_improvement_number_of_minutes" class="oe_inline"/>
                           <label string="  minutes." class="oe_inline o_light_label"/>
                          </div>
                        </div>
                    </div>
                  </div>
                </div>
              </div>
            </xpath>
          </field>
      </record>

</odoo>
